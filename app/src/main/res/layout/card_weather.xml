<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_weight="0.92"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/current_condition_pic"
                android:layout_width="69dp"
                android:layout_height="60dp"
                android:visibility="visible"
                app:srcCompat="@drawable/sunny"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="16dp"
                android:layout_marginStart="29dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/current_city_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Culiacan"
                android:layout_above="@+id/current_temperature"
                android:layout_toEndOf="@+id/current_temperature"
                android:layout_marginStart="51dp"
                android:layout_marginBottom="13dp" />

            <TextView
                android:id="@+id/current_temperature_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="30sp"
                tools:text="Â°35"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/current_country_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/current_condition_pic"
                android:text="TextView"
                tools:layout_editor_absoluteX="110dp"
                tools:layout_editor_absoluteY="59dp"
                tools:text="Sinaloa"
                android:layout_alignStart="@+id/current_city_card"
                android:layout_marginBottom="12dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
